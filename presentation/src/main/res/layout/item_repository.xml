<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок репозитория -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRepositoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repository Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/tvRepositoryFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="owner/repo"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvIsPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌐 Публичный"
                android:textSize="12sp"
                android:background="@android:color/holo_green_light"
                android:padding="4dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:id="@+id/tvRepositoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание репозитория"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- URL -->
        <TextView
            android:id="@+id/tvRepositoryUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://github.com/owner/repo"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark"
            android:autoLink="web"
            android:layout_marginBottom="12dp" />

        <!-- Статистика -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvStars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⭐ 0"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvForks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔀 0"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvOpenIssues"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📝 0"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Языки программирования -->
        <TextView
            android:id="@+id/tvLanguages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔧 Языки не определены"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Размер и даты -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📦 0 KB"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔄 2024-01-01"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📅 2024-01-01"
                android:textSize="12sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Дополнительные возможности -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvHasWiki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📚 Wiki"
                android:textSize="12sp"
                android:background="@android:color/holo_green_light"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvHasPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌐 Pages"
                android:textSize="12sp"
                android:background="@android:color/holo_blue_light"
                android:padding="4dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Структура -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTotalFiles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📁 0 файлов"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDirectories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📂 Папки"
                android:textSize="12sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Коммиты -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvTotalCommits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💾 0 коммитов"
                android:textSize="12sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvLastCommit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔄 2024-01-01"
                android:textSize="12sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- README preview -->
        <TextView
            android:id="@+id/tvReadmePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="README content..."
            android:textSize="12sp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Лицензия -->
        <TextView
            android:id="@+id/tvLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📄 MIT License"
            android:textSize="12sp"
            android:background="@android:color/holo_orange_light"
            android:padding="4dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Топики -->
        <TextView
            android:id="@+id/tvTopics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏷️ android, kotlin, app"
            android:textSize="12sp"
            android:background="@android:color/holo_purple"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
